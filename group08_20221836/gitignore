# Node modules
node_modules/

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids/
*.pid
*.seed
*.pid.lock

# dotenv environment variables
.env
.env.*.local

# Database files (optional)
*.sqlite
*.db

# Optional npm cache directory
.npm/

# Optional eslint cache
.eslintcache

# Output of 'npm pack'
*.tgz

# VSCode settings
.vscode/

# Coverage directory used by tools like istanbul
coverage/

# Build output
dist/
build/

# Templates cache (if using express-handlebars or pug with cache)
tmp/
views_caches/
template_cache/

# OS files
.DS_Store
Thumbs.db

# Session files (if stored locally)
sessions/
*.session

# Uploads (optional - if storing uploads locally)
uploads/

# Compiled JS from TypeScript (if using ts-node)
*.tsbuildinfo

# Ignore ZIPs and backups
*.zip
*.bak
